<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head');%>

    <body class="login-page">
        <div class="login-box">
            <h2 class="heading-login-box">Sign Up</h2>
            <form action="/signup" method="POST">
                <div class="user-box">
                    <input class="user-box-input" name="username" type="Logintext">
                    <label class="user-box-label">Username</label>
                </div>
                <div class="user-box">
                    <input class="user-box-input" name="email" type="Logintext">
                    <label class="user-box-label">Email</label>
                </div>
                <div class="user-box">
                    <input class="user-box-input" type="password" name="password">
                    <label class="user-box-label">Password</label>
                </div>
                <div class="user-box">
                    <input class="user-box-input" type="password" name="confirmPassword">
                    <label class="user-box-label">confirm password</label>
                </div>
                <% if (typeof error !== 'undefined') { %>
                    <p class="text-danger"><%= error %></p>
                <% } %>
    
                <div class="d-flex justify-content-between mt-5">
                    <button type="submit" class="btn btn-primary" href="#">Submit</button>
                    <button type="button" class="btn btn-link" onclick="login()">Login</button>
                </div>
                <!-- <%- include('../partials/footer');%> -->
            </form>
        </div>
       <script>
       function login(){
        window.location.href='/login'
       }
       </script>
        <script src="js/validate.js"></script>
    </body> 

</html>

